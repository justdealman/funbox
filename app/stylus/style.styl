@import './mixins/fonts.styl'

/* Fonts */

webfont('Exo 2.0', 'exo20-thin', 100)

/* Default */

html
	height 100%
	*
		max-height 1000000px
		vertical-align top
		box-sizing border-box

	*:before,
	*:after 
		vertical-align top
		box-sizing border-box

body
	width 100%
	height 100%
	color #0f0f0f
	font-size 12px
	line-height 16px
	font-family 'Gotham Pro', sans-serif
	padding 0
	margin 0
	background #ffffff
	-webkit-tap-highlight-color transparent
	
p
	text-indent 0
	padding 0
	margin 0 0 16px

table
	margin 0 0 16px
	border-collapse collapse
	td
		padding 0

:focus
	outline none

img
	padding 0
	margin 0
	border 0

a
	color #0f0f0f
	text-decoration none
	&:hover
		text-decoration none

form
	margin 0

ul 
	margin 0 0 10px 16px
	padding 0
	li
		padding 0 
		list-style none 

ol
	margin 0 0 10px 18px
	padding 0
	li
		padding 0 0 0 16px	

input,
select,
textarea
	color #0f0f0f
	font-size 12px
	font-family 'Gotham Pro', sans-serif
	padding 0
	margin 0
	background none
	border 0
	box-sizing border-box

textarea
	overflow auto

button
	font-family 'Gotham Pro', sans-serif
	margin 0
	border 0
	box-sizing border-box
	&::-moz-focus-inner
		padding 0
		border 0

::-webkit-input-placeholder
	color #a8a8a8

:-moz-placeholder
	color #a8a8a8

::-moz-placeholder
	color #a8a8a8

:-ms-input-placeholder
	color #a8a8a8;

.img-cover,
.img-contain
	display none !important
	
/* Core */

.goods
	display table
	width 100%
	height 100%
	background url('../img/bg.png') repeat 50% 50%

	&__row
		display table-cell
		vertical-align middle
		padding 38px 40px 26px

	&--title
		display block
		color #ffffff
		font-size 36px
		line-height 42px
		font-weight 100
		font-family 'Exo 2.0', sans-serif
		text-align center
		text-shadow 0 1px 0 #000000
		padding 0 40px
		margin 0 0 24px

	&__grid

		max-width 1200px
		font-size 0
		text-align center
		margin 0 auto

	&__item
		display inline-block
		width 33.33%
		text-align center
		vertical-align top
		padding 0 40px
		margin:0 0 40px
	
.item-goods
	position relative
	display block
	width 320px
	height 480px
	text-align left
	cursor pointer
	margin 0 auto
	transition stroke 1s ease

	&.hover
		opacity 0.5
	
	svg
		position absolute
		left 0
		top 0
		width 100%
		height 100%

	.animate-border
		fill #f2f2f2
		stroke #1698d9
		transition all 0.5s ease

	&--pic 
		position absolute
		left 4px
		bottom 4px
		z-index 1
		width 100%
		width calc(100% - 8px)
		height auto
		border-radius 0 0 9px 9px
	
	&__content
		position absolute
		left 0
		top 0
		z-index 2
		width 100%
		color #666666
		font-family 'Trebuchet MS', sans-serif
		padding 20px 44px 0 48px
		
	&--subtitle
		font-size 16px
		line-height 22px
		margin 0 0 5px
		
		&_add
			display block
		
		&_remove
			display none
			color #e62e7a
		
	&--title
		color #000000
		font-size 48px
		line-height 52px
		font-weight bold
		margin 0 0 15px
		
		span
			display block
			font-size 24px
			line-height 28px
			
	&--list
		margin 0
		
		li
			font-size 14px
			line-height 16px
			
	&--size
		position absolute
		right 15px
		bottom 15px
		z-index 2
		width 81px
		height 81px
		color #ffffff
		font-size 42px
		line-height 42px
		font-family 'Trebuchet MS', sans-serif
		text-align center
		padding 12px 0 0
		background #1698d9
		border-radius 50%
		transition background-color 1s ease
		
		span
			display block
			font-size 21px
			line-height 24px
			margin -4px 0 0

.goods--tip
	display none
	max-width 320px
	color #ffffff
	font-size 13px
	line-height 16px
	font-family 'Trebuchet MS', sans-serif
	text-align center
	text-shadow 0 1px 0 #000000
	margin 14px auto 0
	
	span
		position relative
		color #1698d9
		cursor pointer
		border-bottom 1px dashed #1698d9

	&_disabled
		color #ffff66
	
.goods__item_is-default

	.goods--tip_default
		display block

	.item-goods.has-hover:hover
		.animate-border
			stroke #2ea8e6
			
		.item-goods--size
			background-color #2ea8e6

.goods__item_is-selected

	.item-goods
		.animate-border
			stroke #d91667
			
		.item-goods--size
			background-color #d91667
		
	.goods--tip_selected
		display block

	.item-goods.has-hover:hover
		.animate-border
			stroke #e62e7a
			
		.item-goods--subtitle_add
			display none
			
		.item-goods--subtitle_remove
			display block
			
		.item-goods--size
			background-color #e62e7a
		
.goods__item_is-disabled
	
	.item-goods
		cursor default
		
	.item-goods__content,
	.item-goods--title
		color #b3b3b3

	.animate-border
		stroke #b3b3b3

	.item-goods--pic
		opacity 0.5

	.item-goods--size
		background-color #b3b3b3

	.goods--tip_disabled
		display block

@media (max-width 1199px)
	
	.goods__row
		padding 38px 20px 26px
		margin 0 auto
		
	.goods--title
		padding 0 20px
		
	.goods__grid
		max-width 720px
		margin 0 auto
	
	.goods__item
		width 50%
		padding 0 20px

@media (max-width 959px)

	.goods__row
		padding 28px 15px 16px
	
	.goods--title
		padding 0 15px
		
	.goods__grid
		max-width 700px
	
	.goods__item
		padding 0 15px

@media (max-width 729px)

	.goods--title
		max-width 320px
		font-size 30px
		line-height 36px
		margin 0 auto 24px

	.goods__row
		padding 28px 0 16px

	.goods__item
		width 100%
		padding 0
		
	.goods--tip
		max-width 350px
		padding 0 15px